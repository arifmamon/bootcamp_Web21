<%- include("../partials/header")%>
<%- include("../partials/navbar")%>



<div class="container" style="margin-top:3rem;width:80vw">
 
            <form class="validated-form" action="/blogs/<%=product._id%>?_method=PATCH" method="POST" style="max-width:70%;margin:10px auto" novalidate>
                <div class="mb-3">
                  <label for="name" class="form-label" >Title Name</label>
                  <input type="text" class="form-control" id="name" placeholder="Product Name" name="product[name]" value="<%=product.name%>" placeholder="Disabled input" aria-label="Disabled input example" disabled>
                  <div id="emailHelp" class="form-text">You Can't Change Title.</div>
                </div>
                <div class="mb-3">
                  <label for="img" class="form-label">Cover Image</label>
                  <input type="text" class="form-control" id="img" placeholder="Image URL" name="product[img]" value="<%=product.img%>" required>
                </div>
        
                <div class="mb-3">
                    <label for="desc" class="form-label">Story</label>
                    <textarea class="form-control" id="desc" cols="30" rows="5" name="product[desc]" required><%=product.desc%></textarea>
                </div>
               
                <button type="submit" class="btn btn-primary">Submit</button>
              </form>
        
   
</div>

<%- include("../partials/footer")%>